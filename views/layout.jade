doctype html
html
  head
    title #{title} Simple Express website
    meta( charset='utf-8' )
    meta( http-euiv='X-UA-Compatible', content='IE-edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1.0' )
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css' )
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css' )
    link(rel='stylesheet', href='/stylesheets/style.css' )
  body
    nav.navbar-default.navbar-fixed-top
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controller='navbar')
                    span.sr-only Toggle Navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#') Simple Express Website
            #navbar.collapse.navbar-collapse
                ul.nav.navbar.navbar-right
                    li(class=(title === 'Home' ? 'active' : ''))
                        a(href='/') Home
                    li(class=(title === 'About' ? 'active' : ''))
                        a(href='/about') About Us
                    li(class=(title === 'Services' ? 'active' : ''))
                        a(href='/services') Our Services
                    li(class=(title === 'Contact' ? 'active' : ''))
                        a(href='/email') Email me
    block content
    include footer.jade

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
    script(src='/javascripts/bootstrap.js' )